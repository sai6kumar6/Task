using System;
namespace program
{
class number
{
public void Main(string[]args)
{
Console.WriteLine("Please enter a number");
int a =Convert.ToInt32(Console.ReadLine());
if (a % 2 == 0)
{
    Console.WriteLine("NUmber is even");
}
else
{
    Console.WriteLine("Number is odd");
}
Console.ReadLine();
}
}
}
